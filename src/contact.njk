<section class="contact-form-section">
    <div class="content">
        <form
        class="contact-form"
        name="contact"
        method="POST"
        action="/thankyou"
        netlify-honeypot="bot-field"
        netlify>
        
        <p class="hidden" style="display:none"><label>Don't fill this out if you're human:</label></p> 
        <input name="bot-field"  style="display:none"/>   

        <p><label>Name</label>
        <input type="text" name="name" /></p>

        <p><label>Email</label>
        <input type="email" name="email" /></p>

        <p><label for="message">Message</label>
        <textarea id="message" name="message" style="height:200px"></textarea></p>

        <p><button type="submit" class="btn btn-primary">Send Message</button></p>
        </form>
    </div>
</section>
